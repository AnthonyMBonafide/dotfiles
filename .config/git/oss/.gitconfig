[core]
  editor = nvim
  whitespace = fix,-indent-with-non-tab,trailing-space,cr-at-eol
  pager = less

[maintenance]
	repo = /Users/anthony.bonafide/projects/oss/turbo-guacamole
[alias]
	fetcha = fetch --all
	rebaseom = rebase origin/main
	commits = commit -s -S
	staash = stash --all
[diff]
	tool = vimdiff
[merge]
  tool = fugitive
[mergetool]
  keepBackup = false
[mergetool "fugitive"]
	cmd = nvim -d -c \"wincmd l\" \"$LOCAL\" \"$MERGED\" \"$REMOTE\"

