[url "ssh://git@github.com/"]
        insteadOf = https://github.com/
[init]
  defaultBranch = main
[user]
	signingkey = /Users/anthony/.ssh/id_ed25519.pub
	email = anthony.bonafide@shipt.com
	name = Anthony M. Bonafide
[core]
  editor = nvim
  whitespace = fix,-indent-with-non-tab,trailing-space,cr-at-eol
  pager = less
[column]
	ui = auto
[branch]
	sort = -committerdate
[alias]
	fetcha = fetch --all
	rebaseom = rebase origin/main
	commits = commit -s -S
	staash = stash --all
[diff]
	tool = vimdiff
[merge]
  tool = fugitive
[mergetool]
  keepBackup = false
[mergetool "fugitive"]
	cmd = nvim -d -c \"wincmd l\" \"$LOCAL\" \"$MERGED\" \"$REMOTE\"
[gpg]
	format = ssh
