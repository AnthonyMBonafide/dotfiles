DEFAULT_BRANCH="main"
DEFAULT_ORIGN="origin"

alias g="git"
alias gf="git fetch --all"
alias grom="git rebase $DEFAULT_ORIGN/$DEFAULT_BRANCH"
alias gfrom="git fetch --all && git rebase $DEFAULT_ORIGN/$DEFAULT_BRANCH"
alias gp="git push origin HEAD"
alias gpwl="git push origin HEAD --force-with-lease"
alias ga="git add ."
alias gc="git commit -s -S"
alias gca="git commit -s -S -a -u"
alias gs="git status"
alias gl="git log"
alias gd="git diff"
alias gwta="gf && git worktreea"
alias gcpe="git commit -s -S -a -u && git push origin HEAD"
alias gcpef="git commit -s -S -a -u && git push origin HEAD --force-with-lease"
alias gwtr="git worktree remove"
alias gwtrf="git worktree remove --force"
